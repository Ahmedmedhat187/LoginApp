<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.ahmed.loginapptask.MainActivity">

    <View
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>

    <TextView
        android:layout_below="@+id/v"
        android:text="The Fastest App"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_msg"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:text="Msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_username"/>
    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/et_username"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:textAppearance="?textAppearanceLargePopupMenu"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_username"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAppearance="?textAppearanceLargePopupMenu"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_password"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:textAppearance="?textAppearanceLargePopupMenu"/>
    <Button
        android:id="@+id/btn_sign"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_login"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sign up"
        android:textAppearance="?textAppearanceLargePopupMenu"/>
    <TextView
        android:text="Powered By Ahmed"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
